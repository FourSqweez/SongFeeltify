<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myTextPrimaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SuggestionTheme">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:radius">50dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="BackgroundCover">
        <item name="android:background">#0A0A0A</item>
    </style>

    <style name="PaddingCover">
        <item name="android:padding">5dp</item>
    </style>

    <style name="RecyclerViewMargin">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>

    </style>

    <style name="ViewPagerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryViewPager2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
