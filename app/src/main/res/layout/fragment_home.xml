<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userplaylist.UserPlaylistActivity"
    android:background="@color/myTextPrimaryColor">




        <TextView
            android:id="@+id/tvNoPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:textAlignment="center"
            android:textColor="@color/common_gray_bg"
            android:textSize="18dp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbPlaylist"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="0dp"
            app:layout_collapseMode="pin"
            app:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            app:title="Your Playlists" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/tbPlaylist"
                    android:id="@+id/rvPlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


</RelativeLayout>
